{
	"name": "Creative Comments",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "This will be our Proof of Concept Chrome-plugin",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"http://*/*"
	],
	"background": {
		"scripts": ["creative_comments_background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*"],
			"js": ["jquery.js", "creative_comments_content.js"],
			"run_at": "document_end"
		}
	]
}